{
  "$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",

  "formatter": {
    "enabled": true
  },

  "linter": {
    "enabled": true
  },

  "assist": {
    "enabled": true
  },

  "json": {
    "formatter": {
      "enabled": false
    },
    "parser": {
      "allowComments": true
    }
  },

  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  }
}
